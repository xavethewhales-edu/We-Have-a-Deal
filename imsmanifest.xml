<?xml version="1.0" encoding="UTF-8"?>
<manifest
  identifier="MANIFEST-ConversationGame"
  version="1.2"
  xmlns="http://www.imsproject.org/xsd/imscp_rootv1p1p2"
  xmlns:adlcp="http://www.adlnet.org/xsd/adlcp_rootv1p2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.imsproject.org/xsd/imscp_rootv1p1p2 imscp_rootv1p1p2.xsd
    http://www.adlnet.org/xsd/adlcp_rootv1p2        adlcp_rootv1p2.xsd">

  <organizations default="ORG-1">
    <organization identifier="ORG-1" structure="hierarchical">
      <title>Keep a Conversation Going!</title>

      <!-- Single SCO (your game) -->
      <item identifier="ITEM-1" identifierref="RES-1" isvisible="true">
        <title>Game Module</title>
        <!-- Passing threshold for success box in SCORM Cloud -->
        <adlcp:masteryscore>75</adlcp:masteryscore>
      </item>
    </organization>
  </organizations>

  <resources>
    <!-- Launch your index with ?scorm=1 so your code goes into LMS mode -->
    <resource identifier="RES-1" type="webcontent" adlcp:scormtype="sco" href="index.html?scorm=1">
      <file href="index.html"/>
      <file href="script.js"/>
      <file href="style.css"/>
      <!-- You donâ€™t have to list every asset; SCORM Cloud is fine with this minimal list -->
    </resource>
  </resources>
</manifest>
